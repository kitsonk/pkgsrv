{
  "name": "pkgsrv",
  "version": "1.0.1",
  "description": "A server providing source packages based on semantic versioning",
  "main": "index.js",
  "bin": {
    "pkgsrv": "./pkgsrv.js"
  },
  "scripts": {
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:tests": "tsc -p tsconfig.tests.json",
    "ci": "run-s clean build:tests copy test:intern test:codecov",
    "clean": "rimraf coverage output lib *.log",
    "copy": "run-p copy:*",
    "copy:fixtures": "cpx \"tests/fixtures/**/*\" output/tests/fixtures",
    "copy:package": "cpx package.json output",
    "copy:static": "cpx \"{src,tests}/**/*.{js,html,css,json}\" output",
    "precommit": "lint-staged",
    "prepare": "run-p build:lib",
    "test": "run-s clean build:tests copy test:intern",
    "test:codecov": "codecov --file=coverage/coverage-final.json --disable=gcov",
    "test:intern": "intern"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitsonk/pkgsrv.git"
  },
  "author": "Kitson P. Kelly <me@kitsonkelly.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitsonk/pkgsrv/issues"
  },
  "homepage": "https://github.com/kitsonk/pkgsrv#readme",
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE",
    "pkgsrv.js",
    "README.md",
    "lib/**/*"
  ],
  "dependencies": {
    "jstoxml": "^1.3.2",
    "koa": "^2.5.1",
    "koa-body": "^4.0.3",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-router": "^7.4.0",
    "semver": "^5.5.0",
    "tslib": "^1.9.2",
    "winston": "^2.4.3",
    "winston-loggly-bulk": "^2.0.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/koa": "^2.0.46",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa-router": "^7.0.28",
    "@types/node": "^8.9.5",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/winston": "^2.3.9",
    "@types/yargs": "^11.0.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.2",
    "cpx": "^1.5.0",
    "husky": "^0.14.3",
    "intern": "^4.2.0",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.2.0",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
