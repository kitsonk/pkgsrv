{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "strict": true,
    "types": [
      "chai-as-promised",
      "intern",
      "sinon-chai"
    ],
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./types/**/*"
  ]
}
