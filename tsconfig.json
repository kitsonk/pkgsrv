{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "removeComments": true,
    "target": "es2017",
    "strict": true,
    "types": [
      "chai-as-promised",
      "intern",
      "sinon-chai"
    ]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}
